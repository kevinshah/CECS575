<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    android:background="#F0f0f0"
    tools:context="com.example.kevin.unisalestorm.CreateAccount">

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Register"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#176CEC"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/register"
        android:textSize="15dp"
        android:ems="10"
        android:gravity="center"
        android:hint="First Name"
        android:textColor="#000000"
        android:inputType="textPersonName">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/lastname"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:hint="Last Name"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/firstname"
        android:layout_alignRight="@+id/firstname"
        android:layout_below="@+id/firstname"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:hint="CSULB Email"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignRight="@+id/lastname"
        android:layout_below="@+id/lastname"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000" />



    <EditText
        android:id="@+id/repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:ems="10"
        android:gravity="center"
        android:hint="Re-password"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_below="@+id/repassword"
        android:onClick="signUp"
        android:background="@drawable/custom_btn_beige"
        android:text="Done" />

</RelativeLayout>
