<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="#ffffcc">


<ImageView
    android:id="@+id/logo"
    android:layout_width="150dp"
    android:layout_height="125dp"
    android:background="@drawable/logooo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="32dp"
    />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="27dp"
        android:background="@drawable/custom_btn_beige"
        android:gravity="center"
        android:textSize="20dp"

        android:onClick="logincheck"
        android:text="Login" />



    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/username"
        android:layout_below="@+id/username"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:text="k">
    </EditText>


    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:gravity="center"
        android:hint="CSULB Email"
        android:inputType="textPersonName"
        android:layout_below="@+id/logo"
        android:textColor="#000000"
        android:text="k@csulb.edu"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="createAccount"
        android:src="@drawable/greenplus" />
</RelativeLayout>
